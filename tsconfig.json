{
    "compilerOptions": {
        "outDir": "./public/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2017", "dom"
        ],
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "/node_modules/"
    ]
}
